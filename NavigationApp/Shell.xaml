<Window
	x:Class="NavigationApp.Shell"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="MainWindow"
	Height="350"
	Width="525"
	xmlns:prism="http://www.codeplex.com/prism"
	xmlns:local="clr-namespace:NavigationApp"
	xmlns:infra="clr-namespace:NavigationApp.Infra"
	infra:RegionBehaviors.WorkspaceRegion="{x:Static local:RegionNames.MainRegion}">
	<Grid>
		<DockPanel>
			<Menu
				prism:RegionManager.RegionName="{x:Static local:RegionNames.MainMenuRegion}" DockPanel.Dock="Top"></Menu>
			<TabControl >
				<!--prism:RegionManager.RegionName="{x:Static local:RegionNames.MainRegion}"-->
			</TabControl>
		</DockPanel>
	</Grid>
</Window>
